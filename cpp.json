{
  "namespace": {
    "prefix": "namespace",
    "body": ["namespace $1 {", "", "$0", "", "} // namespace $1"]
  },

  "header guard": {
    "prefix": "header guard",
    "body": ["#ifndef $1", "#define $1", "", "$0", "", "#endif // $1", ""]
  },

  "class declaration": {
    "prefix": "classdecl",
    "body": ["class $1 {", "  private:", "    $0", "", "  public:", "", "};"]
  },

  "function prototype": {
    "prefix": "function",
    "body": ["${1:return_type} ${2:name}(${args})$0"]
  },

  "class method implementation": {
    "prefix": "classmethodimpl",
    "body": [
      "${1:return_type} ${2:class_name}::${3:method_name}(${4:args})$5 {",
      "  $0",
      "}",
      ""
    ]
  }
}
