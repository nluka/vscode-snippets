{
  "ES5 Function": {
    "prefix": "func",
    "body": ["function ${1:name}(${2:/*args*/}) {", "  $0", "}", ""]
  },

  "ES6 Arrow Function": {
    "prefix": "afunc",
    "body": ["const ${1:name} = (${2:/*args*/}) => {", "  $0", "};", ""]
  },

  "React Functional Component": {
    "prefix": "rfc",
    "body": [
      "import React from 'react';",
      "",
      "interface IProps {",
      "  $2",
      "}",
      "",
      "export default function ${1:Name}(props: IProps) {",
      "  return (",
      "    <$3>",
      "      $0",
      "    </$3>",
      "  );",
      "};",
      ""
    ]
  },

  "React Functional Component (No Props)": {
    "prefix": "rfcnp",
    "body": [
      "import React from 'react';",
      "",
      "export default function ${1:Name}() {",
      "  return (",
      "    <$2>",
      "      $0",
      "    </$2>",
      "  );",
      "};",
      ""
    ]
  }
}
